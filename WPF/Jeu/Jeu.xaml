<Window x:Class="WPF.Jeu.Jeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF.Jeu"
        Title="Boris World" Height="600" Width="800">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="400*" />
            <RowDefinition Height="170*" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="Black">
            <local:CanvasCarte x:Name="canvasCarte" Background="Black"/>
        </ScrollViewer>
        <Rectangle Fill="#FFF4F4F5" Grid.Row="1" Stroke="Black" />
    </Grid>
</Window>
