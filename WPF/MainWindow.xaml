<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:WPF"
        Title="Boris World" Height="600" Width="800">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="400*" />
            <RowDefinition Height="170*" />
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalAlignment="Stretch" Grid.Row="0">
            <Canvas Name="carte" HorizontalAlignment="Stretch" Background="Black">
            </Canvas>
        </ScrollViewer>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Stretch" Grid.Row="1" Stroke="Black" />
    </Grid>
    
</Window>
